<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">

{%- if request.page_type == 'password' -%}
  <title>
    {{- shop.name -}}
  </title>
{%- else -%}
  {%- if template == 'index' -%}
    <title>MahaShe - Australian Cotton Clothing</title>
    <meta name="description" content="Explore MahaShe's range of Australian cotton clothing. Discover quality cotton pieces–from cotton dresses, tops, shirts, trousers, and more. Shop now!">
  {%- elsif canonical_url == "https://mahashe.com/collections/all" -%}
    <title>Shop All Products - Cotton Clothing | MahaShe</title>
    <meta name="description" content="Discover comfort and sustainability with our Australian cotton clothing collection at MahaShe–from women's dresses, tops, men's tailored shirts & more!">
  {%- else -%}
    <title>
      {{- page_title -}}
      {%- if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif -%}
      {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>
  {%- endif -%}
{%- endif -%}

{%- if canonical_url != blank -%}
  <link rel="canonical" href="{{ canonical_url }}">
{%- endif -%}

{%- if settings.favicon != blank -%}
  {%- liquid
    assign image_type = settings.favicon | split: '?' | first | split: '.' | last | downcase
    if image_type == 'svg'
      assign image_type = 'svg+xml'
    endif
  -%}
  <link rel="icon" href="{{ settings.favicon | image_url: width: 48, height: 48 }}" type="image/{{ image_type }}">
  <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
{%- endif -%}

{%- if page_description -%}
  <meta name="description" content="{{ page_description | escape }}">
{%- endif -%}
